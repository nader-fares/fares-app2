<AnchorPane prefHeight="715.0" prefWidth="836.0" styleClass="anchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.InventoryController">
    <Text layoutX="44.0" layoutY="83.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Lucida Console', Courier, monospace" text="Inventory Manager">
        <font>
            <Font name="System Bold" size="34.0" />
        </font>
      <fill>
         <LinearGradient endX="1.0" endY="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color red="0.12865497171878815" green="0.5971735119819641" blue="0.8684210777282715" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="0.5990496873855591" green="0.8369944095611572" blue="0.8684210777282715" />
                  </color>
               </Stop>
            </stops>
         </LinearGradient>
      </fill>
    </Text>
    <TextField fx:id="searchTextField" layoutX="494.0" layoutY="69.0" prefHeight="25.0" prefWidth="168.0" promptText="Search item" />
    <Button fx:id="searchButton" layoutX="676.0" layoutY="69.0" mnemonicParsing="false" onAction="#searchItem" prefHeight="25.0" prefWidth="67.0" text="Search" />
    <TableView fx:id="itemTableView" layoutX="44.0" layoutY="109.0" prefHeight="478.0" prefWidth="699.0" styleClass="table-view">
        <columns>
            <TableColumn fx:id="tableSN" prefWidth="276.0" text="Serial Number" />
            <TableColumn fx:id="tableName" prefWidth="228.0" text="Name" />
            <TableColumn fx:id="tableValue" prefWidth="194.0" text="Value" />
        </columns>
    </TableView>
    <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="836.0" styleClass="menu-bar">
        <menus>
            <Menu mnemonicParsing="false" styleClass="menu-item" text="File">
                <items>
                    <MenuItem fx:id="loadButton" mnemonicParsing="false" onAction="#loadList" text="Load" />
                    <Menu mnemonicParsing="false" text="Save as">
                        <items>
                            <MenuItem fx:id="saveTSVButton" mnemonicParsing="false" onAction="#saveAsTSV" text="TSV" />
                            <MenuItem fx:id="saveJSONButton" mnemonicParsing="false" onAction="#saveAsJSON" text="JSON" />
                            <MenuItem fx:id="saveHTMLButton" mnemonicParsing="false" onAction="#saveAsHTML" text="HTML" />
                        </items>
                    </Menu>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" styleClass="menu-item" text="Sort">
                <items>
               <MenuItem fx:id="sortOrderButton" mnemonicParsing="false" onAction="#sortByOrder" text="Add Order" />
                    <MenuItem fx:id="sortValueButton" mnemonicParsing="false" onAction="#sortByValue" text="Value" />
                    <MenuItem fx:id="sortSerialButton" mnemonicParsing="false" onAction="#sortBySerial" text="Serial Number" />
                    <MenuItem fx:id="sortNameButton" mnemonicParsing="false" onAction="#sortByName" text="Name" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <TextField fx:id="serialTextField" layoutX="44.0" layoutY="608.0" prefHeight="25.0" prefWidth="275.0" promptText="Enter Serial Number" />
    <TextField fx:id="nameTextField" layoutX="333.0" layoutY="608.0" prefHeight="25.0" prefWidth="179.0" promptText="Enter Name" />
    <TextField fx:id="valueTextField" layoutX="529.0" layoutY="608.0" prefHeight="25.0" prefWidth="109.0" promptText="Enter Value" />
    <Button fx:id="addButton" layoutX="662.0" layoutY="608.0" mnemonicParsing="false" onAction="#addItemToList" prefHeight="25.0" prefWidth="81.0" text="Add" />
    <ButtonBar layoutX="39.0" layoutY="646.0" prefHeight="40.0" prefWidth="699.0">
        <buttons>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteItemFromList" prefHeight="25.0" prefWidth="415.0" text="Delete" />
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearList" text="Clear" />
         <MenuButton alignment="CENTER" mnemonicParsing="false" text="Edit">
           <items>
             <MenuItem fx:id="editItemButton" mnemonicParsing="false" onAction="#editItem" text="Edit Item" />
               <SeparatorMenuItem mnemonicParsing="false" />
             <MenuItem fx:id="editNameButton" mnemonicParsing="false" onAction="#editName" text="Edit Name" />
               <MenuItem fx:id="editSerialButton" mnemonicParsing="false" onAction="#editSerial" text="Edit Serial Number" />
               <MenuItem fx:id="editValueButton" mnemonicParsing="false" onAction="#editValue" text="Edit Value" />
           </items>
         </MenuButton>
        </buttons>
    </ButtonBar>
</AnchorPane>
